<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerLinks}}
    
</head>

<body>
    {{>navbar}}
    <div class="main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="container-fluid main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="Search" id="submitBtn">
                        <p id="temp_err"></p>
                    </form>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">13 OCT</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name"> Get Output here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{>footer}}
    <script src="js/main.js"></script>
    <script>
        const getCurrentDay = ()=>{
            let weekday = new Array(7);
            weekday[0]="Sunday";
            weekday[1]="Monday";
            weekday[2]="Tuesday";
            weekday[3]="Wednesday";
            weekday[4]="Thrusday";
            weekday[5]="Friday";
            weekday[6]="Saturday";

            let month = new Array(12);
            month[0] = "January";
            month[1] = "Febraury";
            month[2] = "March";
            month[3] = "April";
            month[4] = "May";
            month[5] = "June";
            month[6] = "July";
            month[7] = "August";
            month[8] = "September";
            month[9] = "October";
            month[10] = "November";
            month[11] = "December";

            let currentTime = new Date();
            let days = weekday[currentTime.getDay()];
            let months = month[currentTime.getUTCMonth()];
            let todayDate = currentTime.getUTCDate();

            let day = document.getElementById('day');
            let todays_date = document.getElementById('today_date');

            day.innerText = days;
            todays_date.innerText =`${months}, ${todayDate}`;
            }
        getCurrentDay();
    </script>
</body>

</html>